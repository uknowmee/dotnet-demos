{
  "AllowedHosts": "*",
  "DatabaseSettings": {
    "Books": {
      "ConnectionString": "Data Source=db/books/books.db",
      "Type": "Sqlite"
    },
    "Events": {
      "ConnectionString": "Data Source=db/events/events.db",
      "Type": "Sqlite"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File",
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Information"
      }
    },
    "LevelSwitches": {
      "consoleLevelSwitch": "Debug",
      "fileLevelSwitch": "Verbose"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
                "path": "./logs/log-.jsonl",
                "rollingInterval": "Day",
                "levelSwitch": "$fileLevelSwitch"
              }
            },
            {
              "Name": "Console",
              "Args": {
                "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}",
                "levelSwitch": "$consoleLevelSwitch"
              }
            }
          ]
        }
      }
    ]
  }
}
